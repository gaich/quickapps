<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:layout_height="260dp"
              tools:layout_width="260dp">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/msgbox_margin"
        android:layout_marginRight="@dimen/msgbox_margin"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:text="New Quick Circle apps were installed." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/buttonBarStyle"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?attr/buttonBarButtonStyle"
            android:background="@drawable/back_button_background"
            android:gravity="center"
            android:text="@android:string/ok"
            android:textColor="#4C89B8" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?attr/buttonBarButtonStyle"
            android:background="@drawable/back_button_background"
            android:gravity="center"
            android:text="@android:string/cancel"
            android:textColor="#4C89B8" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/buttonBarStyle"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_button_background"
            android:gravity="center"
            style="?attr/buttonBarButtonStyle"
            android:text="@android:string/ok"
            android:textColor="#4C89B8" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="?attr/buttonBarButtonStyle"
            android:background="@drawable/back_button_background"
            android:gravity="center"
            android:text="@android:string/cancel"
            android:textColor="#4C89B8" />
    </LinearLayout>
</LinearLayout>
