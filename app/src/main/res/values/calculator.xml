<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="basic_button_style">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">@dimen/button_paddingTop</item>
        <item name="android:paddingBottom">@dimen/button_paddingBottom</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:paddingStart">@dimen/button_paddingLeft</item>
        <item name="android:paddingEnd">@dimen/button_paddingRight</item>
    </style>
    <style name="basic_operator_button_style" parent="@style/basic_button_style">
        <item name="android:background">@drawable/calculator_btn_function_inset</item>
    </style>
    <style name="basic_digit_button_style" parent="@style/basic_button_style">
        <item name="android:background">@drawable/calculator_btn_regular_inset</item>
    </style>
    <style name="basic_del_button_style" parent="@style/basic_button_style">
        <item name="android:background">@drawable/calculator_btn_delete_inset</item>
    </style>
    <style name="basic_all_clear_button_style" parent="@style/basic_button_style">
        <item name="android:background">@drawable/calculator_btn_ac_inset</item>
    </style>
    <style name="basic_equal_button_style" parent="@style/basic_button_style">
        <item name="android:background">@drawable/calculator_btn_equal_inset</item>
    </style>
    <dimen name="button_paddingTop">0.0dip</dimen>
    <dimen name="button_paddingLeft">0.0dip</dimen>
    <dimen name="button_paddingRight">0.0dip</dimen>
    <dimen name="button_paddingBottom">0.0dip</dimen>
    <dimen name="calculator_dimen_top">50dp</dimen>
    <dimen name="calculator_dimen_top_big">65dp</dimen>
    <dimen name="calculator_dimen_top_large">90dp</dimen>

    <string name="digit0" translatable="false">0</string>
    <string name="digit1" translatable="false">1</string>
    <string name="digit2" translatable="false">2</string>
    <string name="digit3" translatable="false">3</string>
    <string name="digit4" translatable="false">4</string>
    <string name="digit5" translatable="false">5</string>
    <string name="digit6" translatable="false">6</string>
    <string name="digit7" translatable="false">7</string>
    <string name="digit8" translatable="false">8</string>
    <string name="digit9" translatable="false">9</string>
    <string name="div" translatable="false">÷</string>
    <string name="mul" translatable="false">×</string>
    <string name="plus" translatable="false">+</string>
    <string name="minus" translatable="false">-</string>
    <string name="dot" translatable="false">.</string>
    <string name="equal" translatable="false">=</string>
    <string name="exponentiation" translatable="false">^</string>
    <string name="sin" translatable="false">sin</string>
    <string name="asin" translatable="false">asin</string>
    <string name="cos" translatable="false">cos</string>
    <string name="acos" translatable="false">acos</string>
    <string name="tan" translatable="false">tan</string>
    <string name="atan" translatable="false">atan</string>
    <string name="log" translatable="false">log</string>
    <string name="ans" translatable="false">ANS</string>
    <string name="sqrt" translatable="false">√</string>

    <string-array name="operators" translatable="false">
        <item>@string/plus</item>
        <item>@string/minus</item>
        <item>@string/div</item>
        <item>@string/exponentiation</item>
        <item>@string/mul</item>
    </string-array>
</resources>